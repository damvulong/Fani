<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/img_cart"
                    android:layout_width="120dp"
                    android:layout_height="113dp"
                    android:padding="4dp"
                    android:src="@drawable/amongus" />

                <TextView
                    android:id="@+id/product_name_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/img_cart"
                    android:text="Product Name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linear_price"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_name_cart"
                    android:layout_toRightOf="@id/img_cart">

                    <TextView
                        android:id="@+id/tv_price_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_name_cart"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/img_cart"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingRight="15dp"
                        android:text="Price:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/price_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_name_cart"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/img_cart"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_quantity"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_price"
                    android:layout_toRightOf="@id/img_cart">

                    <TextView
                        android:id="@+id/tv_quantity_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_name_cart"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/img_cart"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingRight="15dp"
                        android:text="Quantity:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/quantity_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_name_cart"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/img_cart"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/totalPrice_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_quantity"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/img_cart"
                    android:text="$100"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textStyle="bold" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/delete_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_close" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>